@model List<Logo>
<div class="card-body">
    <div class="mt-3">
        <a class="btn btn-lg btn-outline-primary" asp-controller="logo" asp-action="create">Create</a>
    </div>
    <div class="table-responsive pt-3">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-info">
                        <td>
                            @item.Id
                        </td>
                        <td>
                            <img src="~/assets/img/@item.Image"/>
                        </td>
                        <td class="d-flex">
                            <div>
                                <a class="btn btn-primary" asp-controller="logo" asp-action="detail" asp-route-id="@item.Id">Detail</a>
                            </div>
                            <div class="ms-2">
                                <a class="btn btn-warning" asp-controller="logo" asp-action="edit" asp-route-id="@item.Id">Edit</a>
                            </div>
                            <div class="ms-2">
                                <a class="btn btn-danger" asp-controller="logo" asp-action="delete" asp-route-id="@item.Id">Delete</a>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>