@model List<Service>
<div class="card-body">
    <div class="mt-3">
        <a class="btn btn-lg btn-outline-primary" asp-controller="service" asp-action="create">Create</a>
    </div>
    <div class="table-responsive pt-3">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Icon
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-info">
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.Icon
                        </td>
                        <td>
                            @item.Title
                        </td>
                        <td>
                            @if (@item.Description.Length > 30)
                            {
                                @(item.Description.Substring(0,30).ToString() +"...")
                            }
                            else
                            {
                                @item.Description
                            }
                        </td>
                        <td class="d-flex">
                            <div>
                                <a class="btn btn-primary" asp-controller="service" asp-action="detail" asp-route-id="@item.Id">Detail</a>
                            </div>
                            <div class="ms-2">
                                <a class="btn btn-warning" asp-controller="service" asp-action="edit" asp-route-id="@item.Id">Edit</a>
                            </div>
                            <div class="ms-2">
                                <a class="btn btn-danger" asp-controller="service" asp-action="delete" asp-route-id="@item.Id">Delete</a>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>